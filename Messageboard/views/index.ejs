<html>
<body>
    <h2>Lets add a Message:</h2>
    <form action="/newmessage" method="POST">
        <table>
            <tr>
                <td>Name:</td><td><input type="text" name="name"></td>
            </tr>
            <tr>
                <td>Message: </td><td><input type="text" name="message"></td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Add Message">
                </td>
            </tr>
        </table>
    </form>
     
    <h2>Here are all the messages:</h2>
    <% for (var x in messages) { %>
        <p><i><%= messages[x].name %> said </i> <b>"<%= messages[x].message %>"</b></p>
         <p>At: <%= messages[x].createdAt %></p>
         <div class="comments">
         <% for (var i = 0; i < messages[x].comments.length; i++) { %>
            <p><i><%= messages[x].comments[i].name %> said </i> <b>"<%= messages[x].comments[i].comment %>"</b></p>
         <% } %>

         <form action="/messages/comment/<%= messages[x]._id %>" method="POST">
         <p> Name:</p>
         <input type="text" name="name">
         <p> Comment:</p>
         <input type="text" name="comment">

        <button type="submit">Submit comment</button>
        </form>
        </div>
        

        <hr>

    <% } %>
</body>
</html>